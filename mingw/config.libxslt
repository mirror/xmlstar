#!/bin/sh
tail -n +3 "$0"
./configure \
    --prefix=/usr/local/mingw32 \
    --host=i586-mingw32msvc \
    --with-gnu-ld \
    --enable-silent-rules \
    CPPFLAGS=-I/usr/local/mingw32/include \
    LDFLAGS=-L/usr/local/mingw32/lib \
    \
    --with-libxml-prefix=/usr/local/mingw32 \
    --disable-shared \
    --without-plugins \
    --without-debugger \
    --without-python
